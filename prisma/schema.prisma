generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmaker {
  id        Int      @id @default(autoincrement())
  nom       String   @unique
  couleur   String   @default("#3B82F6")
  
  montantes Montante[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Montante {
  id            Int       @id @default(autoincrement())
  bookmakerId   Int
  bookmaker     Bookmaker @relation(fields: [bookmakerId], references: [id])
  miseInitiale  Float
  objectif      String    // "X2", "X3", "X5", "X10"
  statut        String    @default("en_cours") // "en_cours", "GAGNEE", "PERDUE"
  palierActuel  Int       @default(1)
  gainFinal     Float     @default(0)
  
  paliers       Palier[]
  transactions  Transaction[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  dateFin       DateTime?
}

model Palier {
  id            Int      @id @default(autoincrement())
  montanteId    Int
  montante      Montante @relation(fields: [montanteId], references: [id], onDelete: Cascade)
  numero        Int
  mise          Float
  cote          Float
  description   String   @default("")
  statut        String   @default("en_attente") // "en_attente", "GAGNE", "PERDU"
  gainPotentiel Float
  dateResultat  DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Transaction {
  id          Int      @id @default(autoincrement())
  montant     Float
  description String
  type        String   // "MANUAL", "MONTANTE_WIN", "MONTANTE_LOSS"
  montanteId  Int?
  montante    Montante? @relation(fields: [montanteId], references: [id])
  
  createdAt   DateTime @default(now())
}